<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Admin</title>
    <link rel="stylesheet" href="/admin/assets/css/style.css" />
    <link rel="shortcut icon" href="/admin/assets/images/favicon.png" />
    <style>
        .error {
            color: red;
            margin-left: 5px;
        }

        label.error {
            display: inline;
        }
    </style>
</head>

<body style="background: linear-gradient(90deg, #e6e5f2, #4599cd); overflow-x: clip;">
    <div class="contaniner" style="transform: translate(10px, 50%);">
        <div class="row">
            <div class="col-md-4 grid-margin stretch-card" style="margin: 0 auto;">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sign In</h4>
                        <%if(typeof error !='undefined' ){ %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <%-error%>
                                    <span type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                            aria-hidden="true">&times;</span></span>
                            </div>
                            <%}%>
                                <form class="forms-sample" id="loginForm" method="POST" action="/auth/login">

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input name="email" type="email" class="form-control" id="email"
                                            placeholder="Email" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Password</label>
                                        <input type="password" name="password" class="form-control" id="password"
                                            placeholder="Password" />
                                    </div>
                                    <button type="submit" id="loginBtn" class="btn btn-md btn-info mr-2"> Submit
                                    </button>
                                </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/admin/assets/js/jquery.js"></script>
<script src="/admin/assets/js/validate.js"></script>
<script src="/admin/assets/js/jquery.toaster.js"></script>
<!-- <script src="/admin/assets/js/auth.js"></script> -->

</html>